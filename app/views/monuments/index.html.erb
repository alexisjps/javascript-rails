<p style="color: green"><%= notice %></p>

<h1>Monuments</h1>

<div id="monuments">
  <% @monuments.each do |monument| %>
    <%= render monument %>
    <p>
      <%= link_to "Show this monument", monument %>
    </p>
  <% end %>
</div>
<div data-controller="formulaire">
  <a data-formulaire-target="btn" class="btn btn-primary" data-action="click->formulaire#active">Show the form</a>
  <div data-formulaire-target="form" class="d-none">
    <%= simple_form_for(@monument) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :opening_date, as: :string, input_html: {data: {controller: 'datepickr'}} %>
                                                              <%# data-controller="datepickr" %>
      </div>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>
</div>

